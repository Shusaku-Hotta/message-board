<%= form_for(@message) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, "名前", class: "control-label" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :age, "年齢", class: "control-label" %>
    <%= f.text_field :age, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <label for="message_body">内容:</label>
    <%= f.text_area :body, class: "form-control", size: "10x4" %>
  </div>
  
  <div class="form-group">
    <%= f.submit class: "btn btn-sm btn-primary" %>
  </div>
<% end %>
  